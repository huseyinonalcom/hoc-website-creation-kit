{
  "name": "hoc-website-creation-kit",
  "author": {
    "name": "Hüseyin Önal",
    "email": "contact@huseyinonal.com",
    "url": "https://huseyinonal.com"
  },
  "version": "0.0.6",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "volta": {
    "node": "24.12.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./src/hoc-website-creation-kit.css"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "build:tailwind": "tailwindcss -i ./src/tailwind.css -o ./src/tailwind.generated.css",
    "build:css": "node ./scripts/build-css.mjs",
    "releaseprep": "npm run build && npm run build:tailwind && npm run build:css"
  },
  "peerDependencies": {
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "next": "16.1.6"
  },
  "dependencies": {
    "@heroicons/react": "2.2.0",
    "isomorphic-dompurify": "2.36.0",
    "@puckeditor/core": "0.21.0",
    "quill": "2.0.3",
    "quill-table-better": "1.2.3",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.1.18",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3"
  }
}
