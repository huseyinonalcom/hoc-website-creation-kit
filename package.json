{
  "name": "hoc-website-creation-kit",
  "author": {
    "name": "Hüseyin Önal",
    "email": "contact@huseyinonal.com",
    "url": "https://huseyinonal.com"
  },
  "version": "1.0.3",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "volta": {
    "node": "24.12.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./src/hoc-website-creation-kit.css",
    "./puck-dark-theme.css": "./src/puck-dark-theme.css"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "tsc --build --clean tsconfig.build.json",
    "build": "tsc --build tsconfig.build.json",
    "dev": "tsc --build tsconfig.build.json --watch",
    "build:css": "node ./scripts/build-css.mjs",
    "releaseprep": "npm run clean && npm run build && npm run build:css"
  },
  "peerDependencies": {
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "next": "16.1.6"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.985.0",
    "@headlessui/react": "2.2.9",
    "@heroicons/react": "2.2.0",
    "isomorphic-dompurify": "2.36.0",
    "@puckeditor/core": "0.21.0",
    "quill": "2.0.3",
    "quill-table-better": "1.2.3",
    "server-only": "0.0.1",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "typescript": "5.9.3"
  }
}
